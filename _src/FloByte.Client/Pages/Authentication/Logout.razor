@page "/authentication/logout"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<RemoteAuthenticatorView Action="@RemoteAuthenticatorActions.LogOut">
    <LogOutSucceeded>
        <div class="min-h-screen flex items-center justify-center bg-gray-100">
            <div class="p-8 bg-white rounded-lg shadow-md">
                <div class="flex flex-col items-center">
                    <svg class="w-12 h-12 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <p class="mt-4 text-gray-600">You have been successfully logged out.</p>
                    <a href="/" class="mt-4 px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        Return to Home
                    </a>
                </div>
            </div>
        </div>
    </LogOutSucceeded>
    <LogOutFailed>
        <div class="min-h-screen flex items-center justify-center bg-gray-100">
            <div class="p-8 bg-white rounded-lg shadow-md">
                <div class="flex flex-col items-center">
                    <svg class="w-12 h-12 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    <p class="mt-4 text-gray-600">An error occurred during logout.</p>
                    <a href="/" class="mt-4 px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        Return to Home
                    </a>
                </div>
            </div>
        </div>
    </LogOutFailed>
</RemoteAuthenticatorView>
