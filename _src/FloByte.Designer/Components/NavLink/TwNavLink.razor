<NavLink 
    class="@($"group flex items-center gap-x-3 rounded-md p-2 text-sm font-semibold {@CssClass}")" 
    href="@Href" 
    Match="@Match"
    ActiveClass="@($"bg-gray-50 text-indigo-600 {@ActiveCssClass}")">
    <i class="@IconClass" aria-hidden="true"></i>
    <span>@ChildContent</span>
</NavLink>

@code {
    /// The URL to navigate to
    [Parameter, EditorRequired] public string Href { get; set; } = default!;

    /// Any extra Tailwind or custom classes for the link when *not* active
    [Parameter] public string CssClass { get; set; } = "text-gray-700 hover:bg-gray-50 hover:text-indigo-600";

    /// Any extra classes to apply *in addition* to the built-in active styles
    [Parameter] public string ActiveCssClass { get; set; } = "";

    /// How to match the current URI (Prefix is usually good for nav menus)
    [Parameter] public NavLinkMatch Match { get; set; } = NavLinkMatch.Prefix;
  
    /// The full Font Awesome icon class, e.g. "fa-solid fa-home" or "fa-regular fa-user"
    [Parameter, EditorRequired] public string IconClass { get; set; } = default!;

    /// The text or markup to render as the link label
    [Parameter] public RenderFragment? ChildContent { get; set; }
    
    
}