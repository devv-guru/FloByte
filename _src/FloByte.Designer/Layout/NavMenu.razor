<div>
  <!-- Mobile off-canvas backdrop -->
  <div class="@($"fixed inset-0 bg-gray-900/80 transition-opacity duration-300 {(_sidebarOpen ? "opacity-100" : "opacity-0 pointer-events-none")}")" 
       @onclick="ToggleSidebar"
       aria-hidden="true">
  </div>

  <!-- Mobile off-canvas panel -->
  <div class="@($"fixed inset-0 flex transform transition-transform duration-300 {(_sidebarOpen ? "translate-x-0" : "-translate-x-full")}")">
    <div class="relative mr-16 flex w-full max-w-xs flex-1">
      <div class="absolute top-0 left-full flex w-16 justify-center pt-5">
        <button class="-m-2.5 p-2.5" @onclick="ToggleSidebar">
          <span class="sr-only">Close sidebar</span>
          <svg class="h-6 w-6 text-white" …>…</svg>
        </button>
      </div>
      @* Sidebar content *@
      <div class="flex grow flex-col gap-y-5 overflow-y-auto bg-white px-6 pb-4">
        <div class="flex h-16 shrink-0 items-center">
          <img class="h-8 w-auto" src="images/logo.png" alt="Logo" />
        </div>
        <nav class="flex flex-1 flex-col">
          <ul role="list" class="flex flex-1 flex-col gap-y-7">
            <li>
              <ul role="list" class="-mx-2 space-y-1">
                <li>
                  <TwNavLink Href="" IconClass="fa-solid fa-house" Match="NavLinkMatch.All">
                    Dashboard
                  </TwNavLink>
                </li>
                @* … other links … *@
              </ul>
            </li>
            <li class="mt-auto">
              <TwNavLink Href="settings" IconClass="fa-solid fa-cog" CssClass="text-gray-700 hover:text-indigo-600">
                Settings
              </TwNavLink>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <!-- Desktop static sidebar -->
  <div class="hidden lg:fixed lg:inset-y-0 lg:flex lg:w-72 lg:flex-col">
    <div class="flex grow flex-col gap-y-5 overflow-y-auto border-r border-gray-200 bg-white px-6 pb-4">
      <div class="flex h-16 items-center">
        <img class="h-8 w-auto" src="images/logo.png" alt="Logo" />
      </div>
      <nav class="flex flex-1 flex-col">
        <ul role="list" class="flex flex-1 flex-col gap-y-7">
          <li>
            <ul role="list" class="-mx-2 space-y-1">
              <li>
                <TwNavLink Href="" IconClass="fa-solid fa-house" Match="NavLinkMatch.All">
                  Dashboard
                </TwNavLink>
              </li>
            </ul>
          </li>
          <li class="mt-auto">
            <TwNavLink Href="settings" IconClass="fa-solid fa-cog" CssClass="text-gray-700 hover:text-indigo-600">
              Settings
            </TwNavLink>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>

@code {
  private bool _sidebarOpen;

  public void ToggleSidebar()
    => _sidebarOpen = !_sidebarOpen;
}
